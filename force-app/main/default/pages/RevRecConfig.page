        <apex:tab label="Application Settings" name="tabSettings" id="tabSettings">
            <apex:image value="{!URLFOR($Resource.images, 'REV_Log1.png')}"/>
            <apex:include pageName="RevRecAppSetting"/>
        </apex:tab>
        
         <apex:tab label="Mass Calculate" name="MassCalculate" id="MassCalculate">
             <apex:image value="{!URLFOR($Resource.images, 'REV_Log1.png')}"/>
