<apex:page id="mainpage">    
    <c:BlockUI />
    <!-- Code is added on 07/16/2016 - FEATURE # 8: Add links the assignment rule on oppty -->
    <apex:tabPanel switchType="client"  value="{!If(($CurrentPage.parameters.tab == '1'), 'RuleAsg' , 'Rules')}" id="theTabPanel" styleClass="Tabclass">
        <apex:tab label="Rules" name="Rules" id="tabRules">
            <apex:image value="{!URLFOR($Resource.images, 'REV_Log1.png')}"/>
